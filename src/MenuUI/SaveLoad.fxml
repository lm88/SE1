<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet rarpg.css?>

<StackPane styleClass="window" fx:id="saveload" fx:controller="MenuUI.SaveLoadController" xmlns:fx="http://javafx.com/fxml">
<Pane styleClass="bg" />
<BorderPane>
	
	<top>
	<HBox styleClass="menuBorderTitle">
		<!-- header -->
		
		<Label styleClass="menuTitle" text="Save and Load Game"/>
	</HBox>
	</top>
	
	<bottom>
	<HBox styleClass="menuBorder">
		<!-- footer -->
		
	</HBox>
	</bottom>
	
	<left>
	<VBox styleClass="menuBorder">
		<!-- left margin -->
		
	</VBox>
	</left>
	
	<right>
	<VBox styleClass="menuBorder">
		<!-- right margin -->
		
	</VBox>
	</right>
	
	<center>
                               
	<VBox styleClass="menuButtonHolder">
		
		<Button styleClass="menuButton" onAction="#setSlotNum" id="0" text="Overlord 1"/>
		<Button styleClass="menuButton" onAction="#setSlotNum" id="1" text="Overlord 2"/>
		<Button styleClass="menuButton" onAction="#setSlotNum" id="2" text="Overlord 3"/>
                <Label styleClass="statusMessage" fx:id="statusMessage" text=""/>
                <HBox alignment="center" spacing="10">
                    <Button styleClass="menuButton" onAction="#saveGame" id="save" text="Save"/>
                    <Button styleClass="menuButton" onAction="#loadGame" id="load" text="Load"/>
                    <Button styleClass="menuButton" onAction="#transitionView" id="back" text="Back"/>
                </HBox>
	</VBox>
	</center>
	
</BorderPane>
</StackPane>